        <button type="submit" class="btn btn-primary" style="width:100%;margin-top:8px">
          Send
        </button>
      </form>
    </div>
  </div>

  <script>
    // Mobile menu
    const toggleMenu = () => {
      const btn = document.querySelector('.menu-toggle');
      const existing = document.getElementById('mobile-nav');
      const open = !existing;
      btn.setAttribute('aria-expanded', String(open));
      if (existing){ existing.remove(); return; }
      const ul = document.querySelector('.nav-links').cloneNode(true);
      ul.id = 'mobile-nav';
      ul.className = 'mobile-nav';
      ul.setAttribute('role','menu');
      Object.assign(ul.style,{
        position:'fixed',top:'64px',left:'0',right:'0',
        background:'linear-gradient(180deg, rgba(14,20,54,.95), rgba(14,20,54,.85))',
        padding:'16px 20px 24px',display:'grid',gap:'14px',
        borderBottom:'1px solid var(--border)',boxShadow:'0 14px 32px rgba(0,0,0,.5)',
        zIndex:'999',backdropFilter:'blur(10px)'
      });
      document.body.appendChild(ul);
    };

    const hdr = document.getElementById('header');
    const progressBar = document.getElementById('scroll-progress');

    const onScroll = () => {
      const scrollY = window.scrollY || window.pageYOffset;

      // Header shadow
      if (scrollY > 10) hdr.classList.add('scrolled'); else hdr.classList.remove('scrolled');

      // Reveal
      document.querySelectorAll('.fade').forEach(el=>{
        const r = el.getBoundingClientRect();
        if (r.top < window.innerHeight - 80) el.classList.add('show');
      });

      // Progress bar
      const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const pct = height > 0 ? Math.max(0, Math.min(1, scrollY / height)) : 0;
      progressBar.style.width = (pct * 100) + '%';

      // Advanced hero scroll
      const hero = document.querySelector('.hero');
      const bgVideo = document.querySelector('.site-bg video');
      const bgOverlay = document.querySelector('.site-bg-overlay');
      const heroInner = document.querySelector('.hero-inner');
      const heroLeft = document.querySelector('.hero-left');
      const heroRight = document.querySelector('.hero-right');
      const heroCardPrimary = document.querySelector('.hero-card-primary');

      if (hero && heroInner) {
        const heroTop = hero.offsetTop;
        const heroHeight = hero.offsetHeight;
        const vh = window.innerHeight;
        const start = heroTop;
        const end = heroTop + heroHeight - vh;

        let progress = 0;
        if (scrollY <= start) progress = 0;
        else if (scrollY >= end) progress = 1;
        else progress = (scrollY - start) / (end - start);
        progress = Math.min(1, Math.max(0, progress));

        if (bgVideo) {
          const scale = 1.08 + progress * 0.25;
          const translateY = progress * 60;
          bgVideo.style.transform = `scale(${scale}) translateY(${translateY}px)`;
        }
        if (bgOverlay) {
          const o = 0.9 - progress * 0.3;
          bgOverlay.style.opacity = Math.max(0.5, o);
        }

        heroInner.style.transform = `translateY(${progress * -80}px)`;

        const sideOffset = progress * 120;
        const sideOpacity = Math.max(0, 1 - progress * 1.4);

        if (heroLeft) {
          heroLeft.style.transform = `translateX(${-sideOffset}px)`;
          heroLeft.style.opacity = sideOpacity;
        }
        if (heroRight) {
          heroRight.style.transform = `translateX(${sideOffset}px)`;
          heroRight.style.opacity = sideOpacity;
        }
        if (heroCardPrimary) heroCardPrimary.style.transform = `translateY(${progress * 200}px)`;
      }
    };
    document.addEventListener('scroll', onScroll, {passive:true});

    function setupTilt(){
      const els = document.querySelectorAll('.tilt');
      const limit = 8;
      els.forEach(el=>{
        el.addEventListener('pointermove', (e)=>{
          const r = el.getBoundingClientRect();
          const x = e.clientX - r.left, y = e.clientY - r.top;
          const rx = ((y / r.height) - 0.5) * -2 * limit;
          const ry = ((x / r.width) - 0.5) * 2 * limit;
          el.style.transform = `rotateX(${rx.toFixed(2)}deg) rotateY(${ry.toFixed(2)}deg) translateZ(0)`;
        });
        el.addEventListener('pointerleave', ()=>{
          el.style.transform = 'rotateX(0) rotateY(0)';
        });
      });
    }

    /* ===== Modal / popup til Book Demo ===== */
    function openDemoModal(e){
      if (e) e.preventDefault();
      const m = document.getElementById('demo-modal-backdrop');
      if (!m) return;
      m.classList.add('show');
      m.setAttribute('aria-hidden','false');
    }

    function closeDemoModal(){
      const m = document.getElementById('demo-modal-backdrop');
      if (!m) return;
      m.classList.remove('show');
      m.setAttribute('aria-hidden','true');
    }

    function submitDemoForm(e){
      e.preventDefault();
      alert('Tak! Vi vender tilbage hurtigst muligt.');
      closeDemoModal();
    }

    document.addEventListener('click', (e)=>{
      const backdrop = document.getElementById('demo-modal-backdrop');
      if (!backdrop || !backdrop.classList.contains('show')) return;
      if (e.target === backdrop) closeDemoModal();
    });

    document.addEventListener('keydown', (e)=>{
      if (e.key === 'Escape') closeDemoModal();
    });

    window.addEventListener('load', ()=>{
      document.getElementById('yr').textContent = new Date().getFullYear();
      setupTilt();
      onScroll();
    });
  </script>

  <script>
    // ===== Story scroll: change phone + text per step =====
    (function(){
      const section = document.getElementById('industry-demos');
      const msgsEl  = document.getElementById('storyMsgs');
      const nameEl  = document.getElementById('storyName');
      const labelEl = document.getElementById('storyLabel');
      const titleEl = document.getElementById('storyTitle');
      const leadEl  = document.getElementById('storyLead');
      const kickerEl= document.getElementById('storyKicker');
      const copyEl  = document.getElementById('storyCopy');
      const phoneWrap = section.querySelector('.story-phoneWrap');
      const sleep = (ms)=> new Promise(r=>setTimeout(r, ms));

      if (!section || !msgsEl || !titleEl || !leadEl || !copyEl) return;

      const reduceMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

      const steps = [
        {
          name: "Rithink AI",
          label: "General demo",
          kicker: "DEMO",
          title: `Turn every interaction into <span class="gradient-text">qualified pipeline</span>`,
          lead: "A short example of qualifying an inbound lead and booking a time ‚Äî automatically.",
          script: [
            { side:"in",  text:"Hi! I‚Äôm Rithink AI üëã What can I help you with today?", delay:700 },
            { side:"out", text:"I want to see how you handle inbound leads.",          delay:1100 },
            { side:"in",  typing:true,                                               delay:700 },
            { side:"in",  text:"Sure. I can capture leads 24/7, qualify them, and book meetings.\nWhat channel are your leads coming from?", delay:700 },
            { side:"out", text:"Website form + email inbox.",                         delay:1000 },
            { side:"in",  typing:true,                                               delay:650 },
            { side:"in",  text:"Great ‚Äî I‚Äôll route both into one inbox, reply instantly, and create a deal with notes + next steps.\nWant a 10-min demo slot this week?", delay:800 },
            { side:"out", text:"Yes ‚Äî Thursday afternoon.",                           delay:950 },
            { side:"in",  typing:true,                                               delay:700 },
            { side:"in",  text:"Done ‚úÖ I can do 14:30 or 15:00. Which one works?",    delay:700 },
          ]
        },
        {
          name: "Realtor",
          label: "Real estate ¬∑ Viewing booking",
          kicker: "REAL ESTATE",
          title: `Turn inquiries into <span class="gradient-text">booked viewings</span>`,
          lead: "Answer instantly and propose time slots ‚Äî no back-and-forth.",
          script: [
            { side:"in",  text:"Hi! Can I book a viewing for the apartment on Strandvej?", delay:650 },
            { side:"out", text:"Yes ‚Äî what day suits you? I have Wed 17:30 or Sat 11:00.", delay:900 },
            { side:"in",  typing:true, delay:650 },
            { side:"in",  text:"Saturday 11:00 please. Two people.", delay:550 },
            { side:"out", text:"Booked ‚úÖ What‚Äôs your email for confirmation?", delay:850 },
          ]
        },
        {
          name: "Salon",
          label: "Hair salon ¬∑ Appointment",
          kicker: "SALON",
          title: `Fill the calendar with <span class="gradient-text">smart scheduling</span>`,
          lead: "The assistant offers times, captures preferences, and confirms.",
          script: [
            { side:"in",  text:"Do you have time for a haircut this week?", delay:650 },
            { side:"out", text:"Yes ‚Äî would you prefer Tue 14:00 or Fri 10:30?", delay:900 },
            { side:"in",  text:"Friday 10:30!", delay:600 },
            { side:"out", text:"Perfect. Any notes? (short/medium/long + beard?)", delay:900 },
          ]
        },
        {
          name: "Dealer",
          label: "Car dealer ¬∑ Test drive",
          kicker: "AUTOMOTIVE",
          title: `Qualify and book <span class="gradient-text">test drives</span>`,
          lead: "Ask the right questions first ‚Äî then book the slot.",
          script: [
            { side:"in",  text:"Can I book a test drive for the ID.4?", delay:650 },
            { side:"out", text:"Sure. Automatic or manual, and which city?", delay:850 },
            { side:"in",  text:"Automatic. Copenhagen.", delay:550 },
            { side:"out", text:"Great ‚Äî I can offer Thu 12:00 or Sat 13:30. Which one?", delay:950 },
          ]
        },
        {
          name: "Coach",
          label: "Private coach ¬∑ Discovery call",
          kicker: "COACHING",
          title: `Turn questions into <span class="gradient-text">booked calls</span>`,
          lead: "Move from ‚Äúhow does it work?‚Äù to a concrete next step.",
          script: [
            { side:"in",  text:"I‚Äôm looking for a coach. How does it work?", delay:650 },
            { side:"out", text:"We start with a 20-min discovery call. What‚Äôs your main goal right now?", delay:950 },
            { side:"in",  typing:true, delay:650 },
            { side:"in",  text:"Better routines + focus.", delay:550 },
            { side:"out", text:"Got it. Want to book Tue 09:00 or Wed 18:00?", delay:950 },
          ]
        },
        {
          name: "Clinic",
          label: "Clinic ¬∑ Booking",
          kicker: "HEALTH",
          title: `Handle bookings with <span class="gradient-text">care</span>`,
          lead: "Ask urgency + preference, then confirm the appointment.",
          script: [
            { side:"in",  text:"Can I book an appointment for a consultation?", delay:650 },
            { side:"out", text:"Yes. Is this urgent, and do you prefer morning or afternoon?", delay:900 },
            { side:"in",  text:"Not urgent. Afternoon.", delay:550 },
            { side:"out", text:"Okay ‚Äî I can do Thu 14:20 or Fri 15:10. Which fits?", delay:950 },
          ]
        },
      ];

      function addBubble(side, node){
        const row = document.createElement('div');
        row.className = `row ${side}`;
        row.appendChild(node);
        msgsEl.appendChild(row);
        msgsEl.scrollTop = msgsEl.scrollHeight;
        requestAnimationFrame(()=>node.classList.add('show'));
        return row;
      }
      function makeTextBubble(text){
        const b = document.createElement('div');
        b.className = 'bubble';
        b.textContent = text;
        return b;
      }
      function makeTypingBubble(){
        const b = document.createElement('div');
        b.className = 'typing bubble';
        b.innerHTML = `<span class="dot"></span><span class="dot"></span><span class="dot"></span>`;
        return b;
      }

      let runToken = 0;

      async function runChat(script, token){
        let typingRow = null;

        for (const step of script){
          if (token !== runToken) return;

          if (!reduceMotion) {
            await new Promise(r=>setTimeout(r, step.delay || 650));
            if (token !== runToken) return;
          }

          if (typingRow){ typingRow.remove(); typingRow = null; }

          if (step.typing){
            if (reduceMotion) continue;
            typingRow = addBubble(step.side || 'in', makeTypingBubble());
            continue;
          }

          addBubble(step.side || 'in', makeTextBubble(step.text || ""));
        }
      }

async function renderStep(i){
  const s = steps[i];
  if (!s || !phoneWrap) return;

  runToken++;
  const token = runToken;

  // fade/slide OUT
  phoneWrap.classList.add('out');
  copyEl.classList.remove('show');

  if (!reduceMotion) await sleep(240);
  if (token !== runToken) return;

  // swap content
  msgsEl.innerHTML = "";
  if (nameEl) nameEl.textContent = s.name;
  if (labelEl) labelEl.textContent = s.label;
  if (kickerEl) kickerEl.textContent = s.kicker;
  titleEl.innerHTML = s.title;
  leadEl.textContent = s.lead;

  // slide IN + text fade IN samtidig
  phoneWrap.classList.remove('out');
  requestAnimationFrame(()=>copyEl.classList.add('show'));

  // Reduced motion: show all instantly
  if (reduceMotion){
    for (const step of s.script){
      if (step.typing) continue;
      addBubble(step.side || 'in', makeTextBubble(step.text || ""));
    }
    return;
  }

  // start chat lige efter phone ‚Äúlander‚Äù
  await sleep(180);
  if (token !== runToken) return;

  runChat(s.script, token);
}


      // Observe scroll steps
      const stepEls = Array.from(section.querySelectorAll('.story-step'));
      if ('IntersectionObserver' in window && stepEls.length){
        const io = new IntersectionObserver((entries)=>{
          for (const e of entries){
            if (e.isIntersecting){
              const idx = Number(e.target.dataset.step || 0);
              renderStep(idx);
            }
          }
        }, { rootMargin: '-45% 0px -45% 0px', threshold: 0 });

        stepEls.forEach(el=>io.observe(el));
      }

      // initial
      renderStep(0);
    })();
  </script>
</body>
</html>
